# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = false

# 2 space indentation
[{*.coffee,*.js,}]
indent_style = space
indent_size = 2

# 4 space indentation
[{*.cpp,*.h,*.cs,*.fs,*.py}]
indent_style = space
indent_size = 4